<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.passmans.masecondapp.MainActivity"
    android:background="#0cd2fa">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USERNAME"
        android:id="@+id/u"
        android:textSize="20dp"
        android:layout_above="@+id/p"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uf"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/u"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/u"
        android:background="#fefefe"
        android:layout_alignTop="@+id/u"
        android:layout_toRightOf="@+id/u"
        android:layout_marginLeft="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:id="@+id/p"
        android:textSize="20dp"
        android:layout_above="@+id/login"
        android:layout_toStartOf="@+id/pf"
        android:layout_marginBottom="100dp"
        android:layout_toLeftOf="@+id/pf"
        android:layout_marginRight="18dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pf"
        android:layout_alignLeft="@+id/uf"
        android:layout_alignStart="@+id/uf"
        android:layout_alignTop="@+id/p"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/p"
        android:background="#fefefe" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/login"
        android:textSize="40dp"
        android:background="#20f911"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/pf"
        android:layout_alignStart="@+id/pf"
        android:layout_marginBottom="81dp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/im"
        android:src="@drawable/tonix"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/uf"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rslt"
        android:layout_above="@+id/login"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_margin="30dp" />
</RelativeLayout>
